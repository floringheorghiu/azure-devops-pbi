{
  "name": "azure-devops-pbi-integration",
  "version": "1.0.0",
  "description": "Figma plugin for integrating Azure DevOps Product Backlog Items as persistent canvas widgets",
  "main": "code.js",
  "scripts": {
    "build": "./node_modules/.bin/esbuild widget.tsx --bundle --outfile=output.js --target=es2015 --format=iife --jsx-factory=h --jsx-fragment=Fragment",
    "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules .",
    "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix .",
    "watch": "npm run build -- --watch",
    "test": "jest --cacheDirectory=.jest-cache",
    "test:watch": "jest --watch"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@figma/plugin-typings": "*",
    "@types/jest": "^29.5.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "esbuild": "0.27.2",
    "eslint": "^8.54.0",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.3.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {},
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  },
  "dependencies": {
    "@types/node-forge": "1.3.14",
    "node-forge": "1.3.3"
  }
}